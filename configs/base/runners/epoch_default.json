{
    "runner": {
        "type": "EpochRunner",
        "settings": {
            "max_epoch": 40,
            "workflow": {
                "train": 1,
                "val": 1
            }
        },
        "optimizer": {
            "type": "SGD",
            "settings": {
                "lr": 2.5e-4,
                "momentum": 0.9,
                "weight_decay": 5e-4
            }
        },
        "scheduler": {
            "type": "poly",
            "settings": {
                "lr_power": 0.9,
                "min_lr": 1e-5
            }
        }
    }
}