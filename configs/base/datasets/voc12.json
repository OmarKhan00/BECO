{
    "datasets": {
		"type": "VOC",
		
		"settings": {
            "root": "./data/VOC2012"
		},

		"indvidual_settings": {
			"train": {
				"is_train": true,
				"transforms": "train"
			},
			"val": {
				"is_train": false,
				"transforms": "val"
			},
			"test": {
				"is_train": false,
				"transforms": "val"
			}
		},

		"transforms":{
			"train": [
				{
					"type": "RandomResizedCrop",
					"settings": {
						"size": [512, 512],
						"scale": [0.5, 2.0]
					}
				},{
					"type": "RandomHorizontalFlip"
				},{
					"type": "ToTensor"
				},{
					"type": "Normalize",
					"settings": {
						"mean": [0.485, 0.456, 0.406],
						"std": [0.229, 0.224, 0.225]
					}
				}
			],
			"val": [
				{
					"type": "Resize",
					"settings": {
						"size": [512, 512]
					}
				},{
					"type": "CenterCrop",
					"settings": {
						"size": [512, 512]
					}
				},{
					"type": "ToTensor"
				},{
					"type": "Normalize",
					"settings": {
						"mean": [0.485, 0.456, 0.406],
						"std": [0.229, 0.224, 0.225]
					}
				}
			]
		},
		
		"dataloaders": {
			"batch_size": 8,
			"num_workers": 1,
			"drop_last": true
		}
	}
}